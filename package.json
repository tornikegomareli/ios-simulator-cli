{
  "name": "ios-simulator-cli",
  "version": "1.0.0",
  "description": "A powerful command-line interface for iOS Simulator automation",
  "keywords": [
    "ios",
    "simulator",
    "cli",
    "automation",
    "testing",
    "mobile",
    "xcode",
    "simctl",
    "idb"
  ],
  "homepage": "https://github.com/yourusername/ios-simulator-cli",
  "bugs": {
    "url": "https://github.com/yourusername/ios-simulator-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ios-simulator-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sim-cli": "./dist/cli.js",
    "ios-simulator-cli": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage",
    "dev": "ts-node src/cli.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\"",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "prebuild": "npm run clean",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint && npm run format:check && npm test"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin"
  ]
}